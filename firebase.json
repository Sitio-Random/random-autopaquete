{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/admin/getEmails",
                "function": "getEmails"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "predeploy": "yarn build --no-verify"
    }
}
